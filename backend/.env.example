# Backend server port (default: 3000)
PORT=3000

# Azure SQL Database connection
DB_HOST=<your_sql_server_name>.database.windows.net
DB_NAME=ShopSphereDB
DB_USER=<your_db_admin_username>
DB_PASS=<your_db_admin_password>

# Azure Blob Storage (connection string)
AZURE_STORAGE_CONNECTION_STRING=<your_storage_conn_string>

# Stripe (test mode secret key)
STRIPE_SECRET_KEY=<your_stripe_secret_key>

# Session secret (any random string)
SESSION_SECRET=<some_random_string>
